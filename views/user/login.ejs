<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <h1 class="col-6 offset-3 mb-5">Login on RupanshiArt  </h1>
  <div class="col-6 offset-3">
    <form action="/login" method="post" >
      <div class="mb-3">
      <label for="username" class="form-label">username</label>
      <input 
      type="text" 
      name= "username"
      id="username"
      class="form-control"
      required>
      <div class="valid-feedback">username  looks good </div>
      <div class="invalid-feedback">Enter the username  please !</div>
    </div>
    
    <div class="mb-3">
      <label for="password" class="form-label">password</label>
      <input 
      type="text" 
      name= "password"
      id="password"
      class="form-control"
      required>
      <div class="valid-feedback">password looks good </div>
      <div class="invalid-feedback">Enter the password  please !</div>
    </div>
    <button class="btn btn-dark">submit</button>
    </form>
  </div>
</div>