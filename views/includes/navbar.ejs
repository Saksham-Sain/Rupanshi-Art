<nav class="navbar navbar-expand-md navbar-dark sticky-top shadow-sm" style="background-color: #2D2D2D;">
  <div class="container-fluid px-4">

    <!-- Brand -->
    <a class="navbar-brand fw-bold text-light d-flex align-items-center gap-2" href="/">
      <i class="fa-solid fa-compass fs-4"></i>
      <span class="fs-5">Rupanshi Art</span>
    </a>

    <!-- Hamburger button -->
    <button
      class="navbar-toggler border-0"
      type="button"
      aria-label="Toggle navigation"
      id="navbarToggleBtn"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible menu -->
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">

      <!-- Center links -->
      <div class="navbar-nav mx-auto gap-3">
        <a class="nav-link text-light fw-medium px-2" href="/">Home</a>
        <a class="nav-link text-light fw-medium px-2" href="#about" onclick="scrollToSection('about', event)">About</a>
        <a class="nav-link text-light fw-medium px-2" href="#work" onclick="scrollToSection('work', event)">Artwork</a>
        <a class="nav-link text-light fw-medium px-2" href="#contact" onclick="scrollToSection('contact', event)">Contact</a>
      </div>

      <!-- Right side: Auth links -->
      <div class="navbar-nav ms-auto gap-3">
        <% if (!currUser) { %>
          <a class="nav-link text-light fw-medium px-2" href="/login">Login</a>
        <% } else { %>
          <a class="nav-link text-light fw-medium px-2" href="/artworks/new">Add Artwork</a>
          <a class="nav-link text-light fw-medium px-2" href="/logout">Logout</a>
        <% } %>
      </div>

    </div>
  </div>
</nav>

<!-- Bootstrap JS (required) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<!-- Smooth scroll + toggle hamburger fix -->
<script>
  function scrollToSection(sectionId, e) {
    e.preventDefault();

    const target = document.getElementById(sectionId);
    if (!target) return;

    const navbar = document.querySelector('.navbar');
    const navbarHeight = navbar ? navbar.offsetHeight : 0;

    const navbarCollapse = document.querySelector('.navbar-collapse');
    if (navbarCollapse.classList.contains('show')) {
      const bsCollapse = bootstrap.Collapse.getInstance(navbarCollapse) || new bootstrap.Collapse(navbarCollapse, { toggle: false });
      bsCollapse.hide();
    }

    setTimeout(() => {
      const yOffset = target.getBoundingClientRect().top + window.pageYOffset - navbarHeight;
      window.scrollTo({ top: yOffset, behavior: 'smooth' });
    }, 300);
  }

  document.addEventListener('DOMContentLoaded', () => {
    // Toggle navbar manually when clicking the hamburger
    const toggler = document.getElementById('navbarToggleBtn');
    const navCollapse = document.getElementById('navbarNavAltMarkup');

    toggler.addEventListener('click', () => {
      const bsCollapse = bootstrap.Collapse.getInstance(navCollapse)
        || new bootstrap.Collapse(navCollapse, { toggle: false });

      if (navCollapse.classList.contains('show')) {
        bsCollapse.hide();
      } else {
        bsCollapse.show();
      }
    });

    // Scroll to section on anchor click
    document.querySelectorAll('.navbar-nav a[href^="#"]').forEach(link => {
      link.addEventListener('click', (e) => {
        scrollToSection(link.getAttribute('href').substring(1), e);
      });
    });

    // Handle hash on page load
    if (window.location.hash) {
      const sectionId = window.location.hash.substring(1);
      const target = document.getElementById(sectionId);
      if (target) {
        const navbar = document.querySelector('.navbar');
        const navbarHeight = navbar ? navbar.offsetHeight : 0;
        const yOffset = target.getBoundingClientRect().top + window.pageYOffset - navbarHeight;
        window.scrollTo({ top: yOffset, behavior: 'smooth' });
      }
    }
  });
</script>
