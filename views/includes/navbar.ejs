<nav class="navbar navbar-expand-md navbar-dark sticky-top shadow-sm" style="background-color: #2D2D2D;">
  <div class="container-fluid px-4">

    <!-- Brand -->
    <a class="navbar-brand fw-bold text-light d-flex align-items-center gap-2" href="/">
      <i class="fa-solid fa-compass fs-4"></i> <span class="fs-5">Rupanshi Art</span>
    </a>

    <!-- Toggle button for mobile -->
    <button
      class="navbar-toggler border-0"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navbar Links -->
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <!-- Left Links -->
      <div class="navbar-nav mx-auto gap-3">
        <a class="nav-link text-light fw-medium px-2 hover-opacity active" href="/">Home</a>
        <a class="nav-link text-light fw-medium px-2 hover-opacity" href="#about" onclick="scrollToSection('about', event)">About</a>
        <a class="nav-link text-light fw-medium px-2 hover-opacity" href="#work" onclick="scrollToSection('work', event)">Artwork</a>
        <a class="nav-link text-light fw-medium px-2 hover-opacity" href="#contact" onclick="scrollToSection('contact', event)">Contact</a>
      </div>

      <!-- Right Side Auth Links -->
      <div class="navbar-nav ms-auto gap-3">
        <% if (!currUser) { %>
          <a class="nav-link text-light fw-medium px-2 hover-opacity" href="/login">Login</a>
