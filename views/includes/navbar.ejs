<nav class="navbar navbar-expand-md navbar-dark sticky-top shadow-sm" style="background-color: #2D2D2D;">
  <div class="container-fluid px-4">

    <!-- Brand -->
    <a class="navbar-brand fw-bold text-light d-flex align-items-center gap-2" href="/">
      <i class="fa-solid fa-compass fs-4"></i> <span class="fs-5">Rupanshi Art</span>
    </a>

    <!-- Hamburger button -->
    <button
      class="navbar-toggler border-0"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible menu -->
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <!-- Center links -->
      <div class="navbar-nav mx-auto gap-3">
        <a class="nav-link text-light fw-medium px-2 hover-opacity active" href="/">Home</a>
        <a class="nav-link text-light fw-medium px-2 hover-opacity" href="#about" onclick="scrollToSection('about', event)">About</a>
        <a class="nav-link text-light fw-medium px-2 hover-opacity" href="#work" onclick="scrollToSection('work', event)">Artwork</a>
        <a class="nav-link text-light fw-medium px-2 hover-opacity" href="#contact" onclick="scrollToSection('contact', event)">Contact</a>
      </div>

      <!-- Right side (login/logout) -->
      <div class="navbar-nav ms-auto gap-3">
        <% if (!currUser) { %>
          <a class="nav-link text-light fw-medium px-2 hover-opacity" href="/login">Login</a>
        <% } else { %>
          <a class="nav-link text-light fw-medium px-2 hover-opacity" href="/artworks/new">Add Artwork</a>
          <a class="nav-link text-light fw-medium px-2 hover-opacity" href="/logout">Logout</a>
        <% } %>
      </div>
    </div>
  </div>
</nav>

<script>
  // Smooth scroll
  function scrollToSection(sectionId, e) {
    e.preventDefault();
    const element = document.getElementById(sectionId);
    if (element) {
      const navbar = document.querySelector('.navbar');
      const navbarHeight = navbar ? navbar.offsetHeight : 0;
      const elementPosition = element.getBoundingClientRect().top + window.pageYOffset;
      window.scrollTo({
        top: elementPosition - navbarHeight,
        behavior: 'smooth'
      });
    }
  }
</script>

<!-- Bootstrap JS must be loaded before custom JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
  // Auto close menu when clicking a link (mobile)
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.navbar-nav a').forEach(link => {
      link.addEventListener('click', () => {
        const navbarCollapse = document.querySelector('.navbar-collapse');
        if (navbarCollapse.classList.contains('show')) {
          const bsCollapse = bootstrap.Collapse.getInstance(navbarCollapse) || new bootstrap.Collapse(navbarCollapse, { toggle: false });
          bsCollapse.hide();
        }
      });
    });
  });
</script>
